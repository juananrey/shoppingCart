{% set quantity = cartProduct.quantity %}
{% set totalPrice = cartProduct.totalPrice %}
{% set product = cartProduct.product %}
<div>
    {% if product.isUnitary %}
        {{ quantity }} &times; {{ product.name }} ({{ product.price }}&euro;/ud) = {{ totalPrice }}&euro;
    {% else %}
        {{ quantity }} &times; {{ product.name }} ({{ product.price }}&euro;/100gr) = {{ totalPrice }}&euro;
    {% endif %}
</div>